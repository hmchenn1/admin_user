<h1><strong>Welcome to the Daycare website! </strong></h1> 
<h1>Sign in</h1>

<%= form_for(:session, :url => sessions_path) do |f| %>
  <div class="field">
    <%= f.label :email %><br />
    <%= f.text_field :email %>
  </div>
  <div class="field">
    <%= f.label :password %><br />
    <%= f.password_field :password %>
  </div class ="container">
  <div class="actions">
    <%= f.submit "Sign in" %>
  </div>
<% end %>

<p>New user? <%= link_to "Sign up now!", signup_path %></p>
<p>Admin? <%= link_to "Also sign in here!", admin_path %></p>
<p>Note: regular users have no access to the admin page, <br/>although they share the same sign in page </p>
